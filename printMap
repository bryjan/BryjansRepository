import gameClasses as c
import gameObjects as o
import termcolor as tc

def printMap(windowSize,mapArray,mapsize,xViewPoint,yViewPoint):
    mapWindow=[]
    #ensure window is odd.
    if windowSize%2==0:
        windowSize+=1
    windowExtend=windowSize-1
    windowExtend=int(windowExtend/2)
    
    xRow=[]
    y=yViewPoint-windowExtend
    while y <= yViewPoint+windowExtend:
        x=xViewPoint-windowExtend
        while x <= xViewPoint+windowExtend:
            if y<0 or y>mapsize-1 or x<0 or x>mapsize-1:
                xRow.append(c.Cell(o.blank,x,y,"NULL"))
            else:
                y+=1
                xRow.append(mapArray[len(mapArray)-y][x])
                y-=1
            x+=1
        mapWindow.insert(0,xRow)
        y+=1
        xRow=[]
    y=0
    x=0
    
    for y in mapWindow:
        for x in y:
            if x.xPos==xViewPoint and x.yPos==yViewPoint:
                print(tc.colored("@","yellow",attrs=["bold"]),end=" ")
            else:
                x.displayTile()
                print(end=" ")
        print()
    return
